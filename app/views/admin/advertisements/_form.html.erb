<%= render 'shared/errors', obj: advertisement %>
<%= form_for  advertisement, advertisement_form_attributes(advertisement) do |f| %>
  <div class="Center">
    <% if advertisement.image.attached? %>
      <%= image_tag(url_for(advertisement.image.variant(resize: '200x200'))) %><br>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, id: 'title', class: "form-control", :required => true, autocomplete: false, placeholder: "Advertisement Title", autofocus: true %> <br/>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", :required => true, autocomplete: false, placeholder: "Advertisement Description" %> <br/>
  </div>

  <%= f.file_field :image ,:required => true%><br><br>
  <%= f.submit class: "btn btn-block custom-table-edit-btn btn-primary"%>
<% end %>