<%= render 'shared/errors', obj: color %>
<%= form_for  color, color_form_attributes(color) do |f| %>

    <div id="image_<%= @color.image %>">
      <% if @color.image.present? %>
        <%= image_tag(url_for(@color.image), style: "width: 100px") %>
      <% end %>
    </div><br>

  <div class="form-group">
    <%= f.label :title,"Colour Title" %>
    <%= f.text_field :title, class: "form-control", :required => true, autocomplete: false, placeholder: "Colour Title", autofocus: true %> <br/>
  </div>
  <div class="form-group">
    <%= f.label :code,"Colour Code" %>
    <%= f.text_field :code, class: "form-control", autocomplete: false, placeholder: "Colour Code", autofocus: true %> <br/>
  </div>
  <div class="form-group">
    <%= f.label :image,"Colour Image"%> <br>
    <%= f.file_field :image %><br><br>
  </div>
  <%= f.submit class: "btn btn-block custom-table-edit-btn btn-primary"%>
<% end %>