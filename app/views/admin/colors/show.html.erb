<div class="row">
  <div class="col-lg-9 mt-3 offset-2">
    <div class="card">
      <div class="card-header custom-card-header">
        <strong>Color</strong>
      </div>
      <div class="card-body">
        <h2 align="center">Color: <%= @color.title %></h2>
        <div class="well col-xs-8 col-xs-offset-2">
          <h4>Description: </h4><br>
          <p><%= @color.code%></p>
          <div class="article-actions">
            <%= link_to "Edit",  edit_admin_color_path(@color), class: "btn btn-xs custom-table-edit-btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
