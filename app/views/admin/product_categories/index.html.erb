<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Sub Categories</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="product-category-table" class="table table-striped table-bordered display">
          <thead>
          <tr>
            <th>#</th>
            <th>Sub Category</th>
            <th>Category</th>
            <th>Delivery Fee</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @product_categories.each_with_index do |product_category, index| %>
            <tr>
              <td><%=index+1 %></td>
              <td><%= product_category.title %></td>
              <td><%= product_category.category.present? ? product_category.category.title : "" %></td>
              <td><%= product_category.delivery_fee %></td>
              <td><%= link_to "Edit",  edit_admin_product_category_path(product_category), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
                <%= link_to "Delete", admin_product_category_path(product_category), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#product-category-table').dataTable();
    } );
</script>

