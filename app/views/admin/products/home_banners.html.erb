<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> All Products</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <div style="overflow-x: scroll;">
        <table id="product-table" class="table table-bordered table-striped display nowrap dataTable dtr-inline collapsed">
          <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Is Active</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @products.each_with_index do |product, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= product.print_description %></td>
              <td><%= product.status ? 'Active' : 'Inactive'%></td>
              <td><%= link_to "Edit",  edit_banner_form_admin_product_path(product), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
                <%= link_to "Delete", admin_product_path(product), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
    <%= link_to "Create Home Banner",banner_form_admin_products_path, class: "btn btn-primary" ,style: "width: 20%;
    margin: 15px;
    background-color: #b53035;" %>
</div>
<script>
    $(document).ready( function () {
        $('#product-table').dataTable();
    } );
</script>
