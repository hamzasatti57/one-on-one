<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Projects</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="project-table" class="table table-striped table-bordered display">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @projects.each_with_index do |project, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= project.title %></td>
              <td><%= truncate(project.description, length: 20) %></td>
              <td><%= link_to "Edit",  edit_admin_project_path(project), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
                <%= link_to "Show",  admin_project_path(project), class: "btn btn-xs btn-success custom-table-show-btn" %>
                <%= link_to "Delete", admin_project_path(project), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#project-table').dataTable();
    } );
</script>
