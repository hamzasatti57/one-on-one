    <%#= f.label "Active" %>
    <%#= f.check_box :active  %> <br />
  </div> -->

  <%= f.submit class: "btn btn-block custom-table-edit-btn btn-primary"%>
<% end %>

<script>
    function country_onchange_handler(){
        $.ajax({
            url: "/admin/countries/get_cities?country_id=" + $('#country_select option:selected').val()
        })
    }
</script>