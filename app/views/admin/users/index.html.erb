<style type="text/css">
  .del-btn{
    margin-left: 5px;
  }
  .buttons-csv span{
    display: none;
  }
</style>
<div class="card">
  <div class="card-header custom-card-header"> All Customers</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <div style="text-align: right">
          <button class="btn btn-xs btn-primary custom-table-edit-btn user-import">Export</button>
        </div>
        <br>
        <div style="width: 100%; overflow-x: scroll;">
        <table id="user-table" class="table table-striped table-bordered display">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <!-- <th>City</th> -->
            <!-- <th>Category</th> -->
            <th>Cellphone Number</th>
            <!-- <th>Status</th> -->
            <!-- <th>AAA</th> -->
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each_with_index  do |user ,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <% address = BillingAddress.where(is_primary: true, user_id: user.id).present? ? BillingAddress.where(is_primary: true, user_id: user.id).last : nil  %>
              <td><%= address.present? ? address.address : "" %></td>
              <!-- <td><%#= user.city.title %></td> -->
              <!-- <td><%#= user.category_title %></td> -->
              <td><%= user.contact_details %></td>
              <!-- <td><%#= user.active ? 'Active' : 'Inacitve' %></td> -->
              <!-- <td><%#= user.AAA ? 'Yes' : 'No' %></td> -->
              <td style="display: flex;"><%= link_to "Edit",  edit_admin_user_path(user), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
                <%= link_to "Delete", admin_user_path(user), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn del-btn" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.3.1/js/dataTables.buttons.min.js"></script> 
<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.3.1/js/buttons.html5.min.js"></script>
<script>
    $(document).ready( function () {
        $('#user-table').dataTable({
      dom: "lBfrtip",
      buttons: [
        {
              extend: 'csv',

              exportOptions: {
                  columns: [ 0, 1, 2, 3, 4, 5 ]
              },

          }
      ]
    });
    } );

    $(".user-import").click(function(){
      $('.buttons-csv span').click();
    });
</script>

