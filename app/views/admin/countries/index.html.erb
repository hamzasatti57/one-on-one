<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Countries</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="country-table" class="table table-striped table-bordered display">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @countries.each_with_index do |country, index| %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= country.title %></td>
              <td><%= link_to "Edit",  edit_admin_country_path(country), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
                <%= link_to "Delete", admin_country_path(country), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<script>
    $(document).ready( function () {
        $('#country-table').dataTable();
    } );
</script>
