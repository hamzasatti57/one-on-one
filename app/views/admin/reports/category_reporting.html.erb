<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i>
      Product Category Reports
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">

          <table id="product-category-table" class="table table-striped table-bordered display ">
            <thead>
            <tr>
              <th>Sr#</th>
              <th>Title</th>
              <th>Total Views</th>
              <th>1 day</th>
              <th>1 week</th>
              <th>1 month</th>
              <th>6 months</th>
              <th>1 year</th>
            </tr>
            </thead>
            <tbody>
            <% @product_categories.each_with_index  do |category, index| %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= category.title %></td>
                <td><%= category.hits %></td>
                <td><%= category.hits(1.day.ago) %></td>
                <td><%= category.hits(1.week.ago)%></td>
                <td><%= category.hits(1.month.ago) %></td>
                <td><%= category.hits(6.month.ago) %></td>
                <td><%= category.hits(12.month.ago) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#product-category-table').dataTable();
    } );
</script>
