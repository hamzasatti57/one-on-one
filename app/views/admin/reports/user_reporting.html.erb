<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> My Profile Reports
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="user-table" class="table table-striped table-bordered display ">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>Title</th>
            <th>Total Views</th>
            <th>1 day</th>
            <th>1 week</th>
            <th>1 month</th>
            <th>6 months</th>
            <th>1 year</th>
          </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= 1 %></td>
              <td><%= @user.full_name %></td>
              <td><%= @user.hits %></td>
              <td><%= @user.hits(1.day.ago) %></td>
              <td><%= @user.hits(1.week.ago)%></td>
              <td><%= @user.hits(1.month.ago) %></td>
              <td><%= @user.hits(6.month.ago) %></td>
              <td><%= @user.hits(12.month.ago) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
    $(document).ready( function () {
        $('#user-table').dataTable();
    } );
</script>
