<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i>
    <% if current_user.display_products? %>
      Product Like Reports
    <%elsif current_user.display_projects? %>
      Project Like Reports
    <% end %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <% if current_user.display_products? %>
          <table id="product-table" class="table table-striped table-bordered display ">
            <thead>
            <tr>
              <th>Sr#</th>
              <th>Title</th>
              <th>Total Likes</th>
              <th>1 day</th>
              <th>1 week</th>
              <th>1 month</th>
              <th>6 months</th>
              <th>1 year</th>
            </tr>
            </thead>
            <tbody>
            <% @products.each_with_index  do |product, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= product.print_description %></td>
                <td><%= product.likes.count %></td>
                <td><%= like_count(product, product.created_at, product.created_at + 1.day) %></td>
                <td><%= like_count(product, product.created_at, product.created_at + 7.day)%></td>
                <td><%= like_count(product, product.created_at, product.created_at + 1.month)%></td>
                <td><%= like_count(product, product.created_at, product.created_at + 6.months)%></td>
                <td><%= like_count(product, product.created_at, product.created_at + 12.months)%></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <%elsif current_user.display_projects? %>
          <table id="product-table" class="table table-striped table-bordered display ">
            <thead>
            <tr>
              <th>Sr#</th>
              <th>Title</th>
              <th>Total Likes</th>
              <th>1 day</th>
              <th>1 week</th>
              <th>1 month</th>
              <th>6 months</th>
              <th>1 year</th>
            </tr>
            </thead>
            <tbody>
            <% @projects.each_with_index  do |project, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= project.title %></td>
                <td><%= project.likes.count %></td>
                <td><%= like_count(project, project.created_at, project.created_at + 1.day) %></td>
                <td><%= like_count(project, project.created_at, project.created_at + 7.day)%></td>
                <td><%= like_count(project, project.created_at, project.created_at + 1.month)%></td>
                <td><%= like_count(project, project.created_at, project.created_at + 6.months)%></td>
                <td><%= like_count(project, project.created_at, project.created_at + 12.months)%></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
  <script>
      $(document).ready( function () {
          $('#product-table').dataTable();
      } );
  </script>
