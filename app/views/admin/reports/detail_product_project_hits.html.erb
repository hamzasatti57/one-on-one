<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i>
    <% if current_user.display_products? %>
      Product View Reports
    <%elsif current_user.display_projects? %>
      Project View Reports
    <% end %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <% if current_user.display_products? %>
          <table id="product-table" class="table table-striped table-bordered display ">
            <thead>
            <tr>
              <th>Sr#</th>
              <th>Title</th>
              <th>Total View</th>
              <th>1 day</th>
              <th>1 week</th>
              <th>1 month</th>
              <th>6 month</th>
              <th>1 year</th>
            </tr>
            </thead>
            <tbody>
            <% @products.each_with_index  do |product, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= product.print_description %></td>
                <td><%= product.hits %></td>
                <td><%= product.hits(1.day.ago) %></td>
                <td><%= product.hits(1.week.ago)%></td>
                <td><%= product.hits(1.month.ago) %></td>
                <td><%= product.hits(6.month.ago) %></td>
                <td><%= product.hits(12.month.ago) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <%elsif current_user.display_projects? %>
          <table id="product-table" class="table table-striped table-bordered display ">
            <thead>
            <tr>
              <th>Sr#</th>
              <th>Title</th>
              <th>Total Views</th>
              <th>1 day</th>
              <th>1 week</th>
              <th>1 month</th>
              <th>6 months</th>
              <th>1 year</th>
            </tr>
            </thead>
            <tbody>
            <% @projects.each_with_index  do |project, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= project.title %></td>
                <td><%= project.hits %></td>
                <td><%= project.hits(1.day.ago) %></td>
                <td><%= project.hits(1.week.ago)%></td>
                <td><%= project.hits(1.month.ago) %></td>
                <td><%= project.hits(6.month.ago) %></td>
                <td><%= project.hits(12.month.ago) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#product-table').dataTable();
    } );
</script>
