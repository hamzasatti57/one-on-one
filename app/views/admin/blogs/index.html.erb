<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Blogs</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="blogs-table" class="table table-striped table-bordered display">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>Title</th>
            <th>Descrption</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @blogs.each_with_index  do |blog,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= blog.title %></td>
              <td><%= truncate(blog.description, length: 20) %></td>
              <td><%= link_to "Edit",  edit_admin_blog_path(blog), class: "btn btn-xs custom-table-edit-btn btn-primary" %>
                <%= link_to "Show",  admin_blog_path(blog), class: "btn btn-xs btn-success custom-table-show-btn" %>
                <%= link_to "Delete", admin_blog_path(blog), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#blogs-table').dataTable();
    } );
</script>

