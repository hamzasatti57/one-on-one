<%= render 'shared/errors', obj: blog %>
<%= form_for  blog, blog_form_attributes(blog) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control",:required => true, autocomplete: false, placeholder: "Blog Title", autofocus: true %> <br/>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", :required => true, autocomplete: false, placeholder: "Blog Description", autofocus: true %> <br/>
  </div>
  <%= f.file_field :image ,:required => true%><br><br>
  <%= f.submit class: "btn btn-block custom-create-blog-btn btn-primary"%>
<% end %>