<div class="row">
  <div class="col-lg-10 mt-3 offset-1">
    <div class="card">
      <div class="card-header custom-card-header">
        <strong>Product</strong>
      </div>
      <div class="card-body body-bgg">
        <div class="product">
          <div class="product--title">
            <h2><%= @store.title %></h2>
          </div>
          <div class="product--body">
            <div class="product--image">
              <div class="icon-images">
                <div class="center-sliderr">
                  <% @store.images.each do |image| %>
                    <img src= "<%= url_for(image)%>"/>
                  <% end %>
                </div>
                <%# <img src="http://stalkbuylove.com/media/catalog/product/cache/1/image/393x502/9df78eab33525d08d6e5fb8d27136e95/i/n/in1335avv-167-front.jpg"/>
      <img src="http://stalkbuylove.com/media/catalog/product/cache/1/image/393x502/9df78eab33525d08d6e5fb8d27136e95/i/n/in1335avv-167-detail.jpg"/>
      <img src="http://stalkbuylove.com/media/catalog/product/cache/1/image/393x502/9df78eab33525d08d6e5fb8d27136e95/i/n/in1335avv-167-back.jpg"/> %>
              </div>
              <img src="<%=url_for(@product.images.first) %>" class="display-img">
            </div>
            <div class="product--details">
              <div class="product--price">
                <span class="product--price_price">Rs. <%= @store.price%></span>
                <span class="product--price_offer">new arrivel !</span>
              </div>
              <div class="product-desc"><p><%= @store.description%></p></div>
              <div class="hero-info">
                <h2>General Info</h2>
                <ul>
<!--                  <li><span>Product Type</span><%#= @product.product_type.title%></li>-->
<!--                  <li><span>Product Category</span><%#= @product.product_type.title%></li>-->
                  <li><span>Inventory</span><%= @store.inventory%></li>
                  <li><span>Colors</span><% @store.colors.each do |color| %>
                      <%= color.title %>
                    <% end %></li>
                  <li><span>Dimension: LxWxH</span>
                    <% unless @store.length.nil? %>
                      <%= @store.length%>
                    <% end %>
                    <% unless @store.width.nil? %>
                      x <%= @store.width %>
                    <% end %>
                    <% unless @store.height.nil? %>
                      x <%= @store.height %>
                    <% end %></li>
                  <!-- <li><span>Clean and Care </span><%#= @store.clean_and_care ? "Yes" : "No" %></li> -->
                  <li><span>Warranty </span><%= @store.warranty ? "Yes" : "No" %></li>
                </ul>
              </div>
              <div class="add-to-cart">
                <%= link_to "Edit",  edit_admin_store_path(@store), class: "btn btn--cart" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


