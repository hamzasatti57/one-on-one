                  </div> -->
                  <div class="row">
                    <div class="col-12">
                      <div class="text-center">
                         <%= f.submit "REGISTER", class: "btn_3" %>
                      </div>
                      <%#= link_to "Login", new_user_session_path, class: "btn_3"%>
