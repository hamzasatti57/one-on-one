<% if user_signed_in? %>
  $('#comments-container').prepend('<%= j render partial: 'comment', locals: { comment: @comment } %>');
  $('#comments-count').text('<%= @comments_count %> comments');
  $('#comment_statement').val('');
<% else %>
  // toastr.error('Sign in to Comment')
  $('#comments-container').prepend('<%= j render partial: 'comment', locals: { comment: @comment } %>');
  $('#comments-count').text('<%= @comments_count %> comments');
  $('#comment_statement').val('');
<% end %>


