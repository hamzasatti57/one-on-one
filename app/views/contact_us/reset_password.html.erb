  <!-- ================ contact section start ================= -->
  <section class="contact-section padding_top">
    <div class="container">
      <div class=" d-sm-block mb-5 pb-4">
        <div class="row">
          <div class="col-12">
            <h2 class="contact-title">Change Password</h2>
          </div>
          <div class="col-lg-7">
            <%= form_for @user, url: update_user_home_index_path(@user), html: { method: :put } do |f| %>
            <!-- <form id="sendmail" name="sendmail" action="sendmail.php" method="post"> -->
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.password_field(:password, class: "form-control", placeholder: 'Enter Password') %>
                    <!-- <input id="Name" name="Name" type="text" value="" class="form-control" placeholder="Enter your name"> -->
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.password_field(:password_confirmation, class: "form-control", placeholder: 'Enter Password Confirmation') %>
                    <!-- <input id="Email" name="Email" type="email" value="" class="form-control" placeholder="Enter email address"> -->
                </div>
              </div>
              <div class="form-group mt-3">
                <%= f.submit "Update", :class => 'btn_3 button-contactForm' %>
                <!-- <input type="submit" class="btn_3 button-contactForm" value="Send message" /> -->
              </div>
            <!-- </form> -->
            <% end %>
          </div>
      </div>
    </div>
  </section>
